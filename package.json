{
  "name": "vexillology-contests",
  "version": "0.1.0",
  "description": "App to view and vote on reddit /r/vexillology contest entries",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "start": "node server",
    "build": "cd react-ui/ && npm install && npm run build",
    "heroku": "nodemon -L --exec \"heroku local\" --signal SIGTERM -- --port 5000",
    "prepare": "husky install"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "express": "^4.19.2",
    "express-rate-limit": "^6.7.0",
    "firebase-admin": "^12.0.0",
    "helmet": "^6.0.1",
    "lodash": "^4.17.21",
    "memjs": "^1.3.0",
    "numeral": "^2.0.6",
    "pg-connection-string": "^2.5.0",
    "pg-promise": "^10.12.1",
    "snoowrap": "^1.23.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heshammourad/heroku-cra-node.git"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.3",
    "@babel/preset-react": "^7.22.5",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "nodemon": "2.0.7",
    "prettier": "^2.7.1",
    "prettier-eslint": "^15.0.1",
    "prettier-eslint-cli": "^7.1.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint",
      "prettier-eslint --write",
      "git add"
    ]
  }
}
